<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetUpFingerScan">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_baseline_account_circle_24px"/>
            <TextView
                android:id="@+id/txt_ScanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/textLightGrey"
                android:textStyle="bold"
                android:layout_marginLeft="9dp"
                android:text="@string/set_up_Access"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_FingerPrint"
            android:layout_width="270dp"
            android:padding="30dp"
            android:layout_height="270dp"
            android:src="@drawable/ic_fingerprint"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_border"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="200dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/cautionOrange"
            android:text="@string/ensure_attached"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="250dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/place_finger"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <!--Submit-->
        <Button
            android:id="@+id/btn_FingerprintApprove"
            style="@style/submitButton"
            android:layout_alignParentRight="true"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:drawableRight="@drawable/ic_arrow_alt_circle_right"
            android:drawablePadding="8dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>