<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PinActivity">

    <LinearLayout
        android:id="@+id/scanPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/ic_baseline_lock_24px"/>
        <TextView
            android:id="@+id/txt_ScanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginLeft="9dp"
            android:text="@string/Access"
            android:textSize="15sp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_PinLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scanPageTitle"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textLightGrey"
        android:layout_marginBottom="-10dp"
        android:text="@string/pass_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txt_PinLogin"
        android:layout_marginBottom="-150dp"
        android:layout_marginLeft="80dp"
        android:orientation="vertical"
        android:layout_marginRight="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:text="@string/enter_pin"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edt_merchantPin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLength="4"
            android:singleLine="true"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:background="@color/bgGrey"
            android:inputType="numberPassword"/>

        <TextView
            android:id="@+id/txt_forgotPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Forgot_pass"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimaryBrown"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>